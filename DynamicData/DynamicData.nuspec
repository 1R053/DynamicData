<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>DynamicData</id>
    <version>$version$</version>
    <title>Dynamic Data</title>
    <authors>Roland Pheasant</authors>
    <copyright>Roland Pheasant</copyright>
    <projectUrl>http://dynamic-data.org</projectUrl>
    <owners>Roland Pheasant</owners>
    <licenseUrl>http://opensource.org/licenses/MS-PL</licenseUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Bring the power of Rx to collections using Dynamic Data.
      Dynamic Data is a comprehensive caching and data manipulation solution which introduces domain centric observable collections.
      Linq extensions enable dynamic filtering, sorting, grouping, transforms, binding, pagination, data virtualisation, expiration, disposal management plus more.
    </description>
    <tags>DynamicData Dynamic Data Rx Reactive Observable Cache Binding ObservableCache ObservableList ObservableCollection Collection Linq</tags>
  </metadata>
  
    <group>
      <dependency id="System.Reactive.Linq" version="3.0.0" />
    </group>
    
  <files>
    <!--Net45 files-->
    <file src="bin\Release\DynamicData.dll" target="lib\net45\DynamicData.dll" />
    <file src="bin\Release\DynamicData.pdb" target="lib\net45\DynamicData.pdb" />
    <file src="bin\Release\DynamicData.xml" target="lib\net45\DynamicData.xml" />

    <!--Net standard files-->
    <file src="bin\Release\DynamicData.dll" target="lib\netstandard1.0\DynamicData.dll" />
    <file src="bin\Release\DynamicData.pdb" target="lib\netstandard1.0\DynamicData.pdb" />
    <file src="bin\Release\DynamicData.xml" target="lib\netstandard1.0\DynamicData.xml" />

    <file src="..\DynamicData\**\*.cs" target="src" />
  </files>
</package>